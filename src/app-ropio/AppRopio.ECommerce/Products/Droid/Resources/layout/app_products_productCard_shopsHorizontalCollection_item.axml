<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/app_products_productCard_shopsHorizontalCollection_item_elevation"
    app:cardBackgroundColor="@color/app_products_productCard_shopsHorizontalCollection_item_background"
    app:cardCornerRadius="@dimen/app_products_productCard_shopsHorizontalCollection_item_cornerRadius">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/app_products_productCard_shopsHorizontalCollection_item_name"
            android:id="@+id/app_products_productCard_shopsHorizontalCollection_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="20dp"
            app:MvxBind="Text Name" />
        <TextView
            style="@style/app_products_productCard_shopsHorizontalCollection_item_address"
            android:id="@+id/app_products_productCard_shopsHorizontalCollection_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="456"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_below="@+id/app_products_productCard_shopsHorizontalCollection_item_name"
            android:layout_above="@+id/app_products_productCard_shopsHorizontalCollection_item_quantity"
            app:MvxBind="Text Address" />
        <TextView
            style="@style/app_products_productCard_shopsHorizontalCollection_item_quantity"
            android:id="@+id/app_products_productCard_shopsHorizontalCollection_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="789"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            app:MvxBind="Text Count; Visibility Visibility(Count)" />
        <View
            android:layout_width="@dimen/app_products_productCard_shopsHorizontalCollection_indicatorSize"
            android:layout_height="@dimen/app_products_productCard_shopsHorizontalCollection_indicatorSize"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/app_products_productCard_shopsHorizontalCollection_indicatorMargins"
            app:MvxBind="Background IndicatorBackground(IsProductAvailable); Visibility InvertedVisibility(Count)" />
    </RelativeLayout>
</android.support.v7.widget.CardView>